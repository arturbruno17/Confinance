<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.arturbruno.confinance">

    <application
        android:name=".ConfinanceApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Confinance">
        <activity
            android:name=".views.EditCreditCardActivity"
            android:exported="false" />
        <activity
            android:name=".views.EditBankAccountActivity"
            android:exported="false" />
        <activity
            android:name=".views.CreditCardDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".views.BankAccountDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".views.CreateCreditCardActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".views.CreateBankAccountActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".views.dashboard.DashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".views.learning.LearningActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>