<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Confinance" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Brand colors. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_white</item>
        <item name="colorOnPrimary">@color/black_text</item>
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/black_text</item>
        <item name="colorSurface">@color/gray</item>
        <item name="colorOnSurface">@color/black_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Text appearance -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Confinance.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Confinance.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Confinance.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Confinance.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Confinance.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Confinance.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Confinance.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Confinance.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Confinance.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Confinance.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Confinance.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.Confinance.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Confinance.Overline</item>

        <!-- Button style -->
        <item name="materialButtonStyle"> @style/Widget.Confinance.Button</item>

        <!-- TextInputLayout style -->
        <item name="textInputStyle">@style/Widget.Confinance.TextInputLayout.OutlinedBox</item>
        <item name="android:colorControlActivated">@color/dark_gray</item>

        <!-- Material Calendar style-->
        <item name="materialCalendarTheme">@style/ThemeOverlay.Confinance.DatePicker</item>
        <!-- Material Dialog style-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Confinance.MaterialAlertDialog</item>
    </style>


</resources>