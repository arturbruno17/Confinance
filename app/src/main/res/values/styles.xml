    <!-- Button style -->
    <style name="Widget.Confinance.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="rippleColor">?attr/colorSecondaryVariant</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Confinance.Button.Icon">
        <item name="iconGravity">end</item>
        <item name="iconPadding">0dp</item>
    </style>

    <!-- Text field style -->
    <style name="Widget.Confinance.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/box_stroke_color_state_list</item>
